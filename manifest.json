{
  "manifest_version": 2,
  "name": "Distraction Counter",
  "version": "1.0",
  "description": "Tracks how many times you've opened Twitter, Youtube, Instragram, Facebook, and Reddit each day",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
    "19": "twitter.png",
    "38": "twitter.png"
  }
  }
}
